@page "/Productos"
@using Modelos
<AuthorizeView Roles="Administrador">
    <Authorized Context="AuthenticationState">
        <h2>Lista de Productos</h2>
        
        <div class="form-group row">
            <div class="col-sm-10">
                <a href="/Productos/Nuevo" class="btn btn-primary m-2">Nuevo</a>
            </div>
        </div>

        @if(ListaProductos == null)
        {
            <p>No existe productos en el sistema</p>
        }
        else
        {
            
            <table class="table">
                <thead>
                <tr>
                        <th>Código </th>
                        <th>Descripcion</th>
                        <th>Existencia</th>
                        <th>Precio</th>
                        <th>Foto</th>
                        <th>Esta Activo</th>


              
                      </tr>
                 </thead>

                <tbody>

                    @foreach (Producto prod in ListaProductos)
                    {
                           <tr>
                            <th>@prod.Codigo </th>
                            <th>@prod.Descripcion</th>
                            <th>@prod.Existencia</th>
                            <th>@prod.Precio</th>
                            <th>@prod.Foto</th>
                            <th>@prod.EstaActivo</th>



                           </tr>             
                    }
                </tbody>

               

            </table>
        }




        </Authorized>
    <NotAuthorized>
        <h3>No tiene permisos para acceder a esta ruta</h3>
    </NotAuthorized>
</AuthorizeView>
