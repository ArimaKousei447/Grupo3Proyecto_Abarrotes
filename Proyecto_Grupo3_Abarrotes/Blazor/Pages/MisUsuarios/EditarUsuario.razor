@page "/Usuarios/Editar/{CodigoUsuario}"

<AuthorizeView Roles="Administrador">
    <Authorized Context="AuthenticationState">
         <h3>Editar Usuario</h3>
        <br />

        <EditForm Model="@user">
            <DataAnnotationsValidator />

            <div class="form-group row">
                <label for="CodigoUsuario" class="col-sm-2 col-form-label">
                    Código
                </label>
                <div class="col-sm-10">
                    <label for="CodigoUsuario" class="col-sm-2 col-form-label">
                        @user.CodigoUsuario
                    </label>
                </div>
            </div>


            <div class="form-group row">
                <label for="Nombre" class="col-sm-2 col-form-label">
                    Nombre
                </label>
                <div class="col-sm-10">
                    <InputText id="Nombre" class="form-control" @bind-Value="user.Nombre" />
                    <ValidationMessage For="@(() => user.Nombre)" />
                </div>
            </div>


            <div class="form-group row">
                <label for="Contrasena" class="col-sm-2 col-form-label">
                    Contraseña
                </label>
                <div class="col-sm-10">
                    <InputText id="Contrasena" type="password" class="form-control" @bind-Value="user.Contrasena" />
                </div>
            </div>

            <div class="form-group row">
                <label for="Correo" class="col-sm-2 col-form-label">
                    Correo
                </label>
                <div class="col-sm-10">
                    <InputText id="Correo" class="form-control" @bind-Value="user.Correo" />
                </div>
            </div>

            <div class="form-group row">
                <label for="FechaCreacion" class="col-sm-2 col-form-label">
                    Fecha Creación
                </label>
                <div class="col-sm-10">
                    <label for="FechaCreacion" class="col-sm-2 col-form-label">
                        @user.FechaCreacion.ToShortDateString()
                    </label>
                </div>
            </div>





        </EditForm>

    </Authorized>

    <NotAuthorized>
        <h3>No tiene permisos para acceder a esta ruta</h3>
    </NotAuthorized>

</AuthorizeView>